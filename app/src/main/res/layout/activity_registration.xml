<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    tools:context=".RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/Title_TextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Farmer Registration" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorWhite"
            android:elevation="1dp"
            android:orientation="vertical"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    style="@style/Title_TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Details" />

                <EditText
                    android:id="@+id/editText_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    style="@style/Note_TextView_Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" eg. Jon Doe"
                    android:textColor="@color/colorDarkGray" />

                <EditText
                    android:id="@+id/editText_middleName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Father/Husband Name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif"
                    android:text="Gender"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/radioGroup_gender"
                    style="@style/Margin_Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioButton_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:fontFamily="sans-serif"
                        android:text="Male"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/radioButton_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:fontFamily="sans-serif"
                        android:text="Female"
                        android:textSize="16sp" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <EditText
                        android:id="@+id/editText_dob"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/edittext_background"
                        android:hint="Date of Birth"
                        android:inputType="date"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark" />

                    <ImageView
                        android:id="@+id/imageView_calender"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="2.5"
                        android:src="@drawable/ic_calender" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:text="+91"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editText_mobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/edittext_background"
                        android:hint="Mobile Number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorWhite"
            android:elevation="1dp"
            android:orientation="vertical"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    style="@style/Title_TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Communication Details" />

                <EditText
                    android:id="@+id/editText_address"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Address"
                    android:inputType="textMultiLine"
                    android:overScrollMode="always"
                    android:padding="10dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorPrimaryDark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/editText_country"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:hint="Country"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark" />

                    <EditText
                        android:id="@+id/editText_state"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:hint="State"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark" />

                </LinearLayout>

                <EditText
                    android:id="@+id/editText_district"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="District"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/editText_city"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Taluka / Village / City"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/editText_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Pincode"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorWhite"
            android:elevation="1dp"
            android:orientation="vertical"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    style="@style/Title_TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Land Details" />

                <EditText
                    android:id="@+id/editText_landHolding"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Land Holding (Ha.)"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/editText_landType"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Land Type"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/editText_proposedCrops"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Proposed Crops in land"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif"
                    android:text="Attach Land Documents"
                    android:textSize="18sp" />

                <LinearLayout
                    style="@style/Margin_Style"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="7/12"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editText_landDocs1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        android:enabled="false"
                        android:cursorVisible="false"
                        android:background="@drawable/edittext_background"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark" />

                    <ImageView
                        android:id="@+id/imageView_landDocsUpload1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:src="@drawable/ic_camera" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Margin_Style"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="8(a)"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editText_landDocs2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/edittext_background"
                        android:inputType="text"
                        android:enabled="false"
                        android:cursorVisible="false"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark" />

                    <ImageView
                        android:id="@+id/imageView_landDocsUpload2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:src="@drawable/ic_camera" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Margin_Style"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Bhogavta Patra"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editText_landDocs3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/edittext_background"
                        android:inputType="text"
                        android:enabled="false"
                        android:cursorVisible="false"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark" />

                    <ImageView
                        android:id="@+id/imageView_landDocsUpload3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:src="@drawable/ic_camera" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Margin_Style"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Nakasha"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editText_landDocs4"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/edittext_background"
                        android:inputType="text"
                        android:enabled="false"
                        android:cursorVisible="false"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark" />

                    <ImageView
                        android:id="@+id/imageView_landDocsUpload4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:src="@drawable/ic_camera" />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorWhite"
            android:elevation="1dp"
            android:orientation="vertical"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    style="@style/Title_TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bank Details" />


                <EditText
                    android:id="@+id/editText_bankAccountNumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Bank Account Number"
                    android:inputType="number"
                    android:maxLength="18"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/editText_ifscCode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edittext_background"
                    android:hint="IFSC Code"
                    android:inputType="text"
                    android:maxLength="18"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif"
                    android:text="Attach KYC Documents"
                    android:textSize="18sp" />

                <LinearLayout
                    style="@style/Margin_Style"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Aadhar card"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editText_aadharCard"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/edittext_background"
                        android:inputType="text"
                        android:enabled="false"
                        android:cursorVisible="false"
                        android:maxLength="18"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark" />

                    <ImageView
                        android:id="@+id/imageView_aadharCard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:src="@drawable/ic_camera" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Margin_Style"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Pan card"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editText_panCard"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/edittext_background"
                        android:inputType="text"
                        android:enabled="false"
                        android:cursorVisible="false"
                        android:maxLength="18"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryDark" />

                    <ImageView
                        android:id="@+id/imageView_panCard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:src="@drawable/ic_camera" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/button_previous"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/capsule_green_strok"
                android:fontFamily="sans-serif"
                android:onClick="onPreviousButton"
                android:text="Previous"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_next"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/capsule_green"
                android:fontFamily="sans-serif"
                android:onClick="onNextButton"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                tools:ignore="OnClick" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>